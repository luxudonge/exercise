<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gift.witch.activityexercise.SingleTopActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Top Activity"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/standardActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard Activity" />

    <Button
        android:id="@+id/singleTopActivit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Top Activity" />

    <Button
        android:id="@+id/singleTaskActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Task Activity" />

    <Button
        android:id="@+id/singleInstanceActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Instance Activity" />

</LinearLayout>
